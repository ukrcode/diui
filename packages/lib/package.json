{
  "name": "diui",
  "version": "0.1.0",
  "description": "The CSS library using Diia design system.",
  "main": "diui.scss",
  "unpkg": "css/diui.css",
  "style": "css/diui.min.css",
  "files": [
    "css",
    "sass",
    "diui.scss",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "vite --open",
    "preview": "vite preview",
    "build": "npm run build:source && npm run minify:build",
    "build:watch": "postcss --watch diui.scss --output css/diui.css",
    "build:source": "postcss diui.scss --output css/diui.css",
    "minify:build": "postcss css/diui.css --no-map --use cssnano --output css/diui.min.css"
  },
  "keywords": [
    "css-library",
    "css",
    "library",
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web"
  ],
  "devDependencies": {
    "@csstools/postcss-sass": "^5.1.1",
    "cssnano": "^7.0.6",
    "postcss-cli": "^11.0.0",
    "postcss-scss": "^4.0.9",
    "postcss-url": "^10.1.3"
  },
  "author": "",
  "license": "ISC"
}
