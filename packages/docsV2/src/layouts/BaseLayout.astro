---
// TODO: Import it as a package
import "../../../lib/css/diui.css";

const pageTitle: string = Astro.props.pageTitle || "Diui Library";

import "../styles/global.css";
---

<!doctype html>
<html lang="uk">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{pageTitle}</title>
  </head>
  <body class="di-body di-page di-flex di-flex-column">
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
