---
// TODO: Import it as a package
import { normalizeLocalUrl } from "@/shared/normalize-url";
import "../../../lib/css/diui.css";
import "../styles/global.css";

const pageTitle: string = Astro.props.pageTitle || "Diui Library";
const faviconUrl = normalizeLocalUrl("/favicon.svg");
---

<!doctype html>
<html lang="uk">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg+xml" href={faviconUrl} />
    <title>{pageTitle}</title>
  </head>
  <body class="di-body di-page">
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
