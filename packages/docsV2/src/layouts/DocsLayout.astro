---
import DocsNavigation from "../components/DocsNavigation.astro";
import Layout from "./Layout.astro";

const headerTitle = "Документація";
---

<style is:global>
  .docs {
    display: grid;
    grid-template-rows: auto;
    grid-template-columns: 200px 1fr;
    gap: 1rem;
  }

  .docs-menu {
  }

  .docs-content {
  }

  @media screen and (max-width: 836px), print {
    .docs {
        grid-template-columns: 1fr;
    }
  }
</style>

<Layout headerTitle={headerTitle}>
  <div class="di-container docs">
    <DocsNavigation class="docs-menu" />
    <div class="docs-content">
      <slot />
    </div>
  </div>
</Layout>
