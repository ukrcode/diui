---
import DocsNavLink from "./DocsNavLink.astro";

const { class: className } = Astro.props;

const baseNavLinks = [
  {
    url: "/",
    label: "На головну",
  },
  {
    url: "/docs",
    label: "Документація",
  },
];

const navLinks = [
  {
    url: "/docs/typography",
    label: "Типографіка",
  },
  {
    url: "/docs/color-background",
    label: "Колір підложки",
  },
  {
    url: "/docs/color-text",
    label: "Колір тексту",
  },
  {
    url: "/docs/components",
    label: "Компоненти",
  },
];
---

<aside class={className}>
  <nav>
    <ol>
      {
        navLinks.map(({ url, label }) => (
          <DocsNavLink url={url} label={label} />
        ))
      }
    </ol>

    <ul>
      {
        baseNavLinks.map(({ url, label }) => (
          <DocsNavLink url={url} label={label} withIcon={true} />
        ))
      }
    </ul>
  </nav>
</aside>
