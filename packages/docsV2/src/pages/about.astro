---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

import "../styles/global.css";

const pageTitle: string = "About Me";

const identity = {
  firstName: "Sarah",
  country: "Canada",
  occupation: "Technical Writer",
  hobbies: ["photography", "birdwatching", "baseball"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";
---

<Layout pageTitle={pageTitle}>
  <style define:vars={{ "skill-color": skillColor }}>
    h1 {
      color: purple;
      font-size: 4rem;
    }

    .skill {
      color: green;
      font-weight: bold;
      color: var(--skill-color);
    }
  </style>

  <h1>{pageTitle}</h1>
  <h2>... and my new Astro site!</h2>

  <ul>
    <li>My name is {identity.firstName}</li>
    <li>
      I leave in {identity.country}
    </li>
  </ul>

  <h4>My skills</h4>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>

  <p>
    This site will update as I complete more of the tutorial, so keep checking
    back and see how my journey is going!
  </p>

  {happy && <p>I am happy to be learning Astro!</p>}

  {finished && <p>I finished this tutorial!</p>}

  {
    goal === 3 ? (
      <p>My goal is to finish in 3 days.</p>
    ) : (
      <p>My goal is not 3 days.</p>
    )
  }
</Layout>
