---
import Layout from "../layouts/Layout.astro";

const allPosts: { url: string; frontmatter: { title: string } }[] =
  Object.values(import.meta.glob("./posts/*.md", { eager: true }));
---

<Layout>
  <h1>Blog</h1>

  <ul>
    {
      allPosts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
